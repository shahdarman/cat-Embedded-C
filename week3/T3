#include <stdio.h>

int main() {
    int number;
    int count = 0;

    printf("Enter an integer number: ");
    scanf("%d", &number);
    if (number < 0)
    {
        printf("Error vaild");
       
    }
     else if (number == 0) 
    {
        count = 1;
    } else 
    {
        while (number != 0)
        {
            number /= 10; 
            count++;
        }
    }

    printf("The number of digits is: %d\n", count);

    return 0;
}